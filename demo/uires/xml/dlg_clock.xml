<SOUI title="土豆桌面时钟"  translucent="1">
  <skin>
    <imglist name="clock.background" src="img.clock:background"/>
  </skin>

  <root size="-1,-1" layout="hbox">
    <caption size="-1,-1" tip="escape to exit">
      <clock size="-1,-1" skin="clock.background" name="clock_main" msgTransparent="1"
            pointer_hour="img.clock:pointer_hour"
            pointer_minute="img.clock:pointer_minute"
            pointer_second="img.clock:pointer_second"
	        />
      <button id="IDCANCEL" pos="0,0,0,0" visible="0" fun="escape to exit"/>
    </caption>
  </root>
</SOUI>
